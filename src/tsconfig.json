{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["dom", "es6"]
  },
  "include": [
    "../scripts/typings.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
